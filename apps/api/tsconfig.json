{
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "rootDir": "src",
    "tsBuildInfoFile": ".tsbuildinfo",
    "module": "NodeNext",
    "target": "es2021",
    "lib": ["es2021", "dom", "dom.iterable"],
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "isolatedModules": true, 
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": false, 
    "sourceMap": true,  
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"  
  ],
  "exclude": [
    "node_modules",
    "dist",  
    "**/*.test.ts",  
    "**/*.spec.ts"   
  ]
}